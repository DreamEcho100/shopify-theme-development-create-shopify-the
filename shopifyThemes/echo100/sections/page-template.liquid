{% if section.settings.container == 'container' %}
	{% assign container_class = 'container' %}
{% else %}
	{% assign container_class = 'container-fluid' %}
{% endif %}

<main class="{{ container_class }} my-5">
	<header>
		<h1>{{ section.settings.title }}</h1>
		{% if section.settings.show_published_date %}
			<p class="mb-3"><small>{{ page.published_at | date: '%B %d, %Y' }}</small></p>
		{% endif %}
	</header>
	<section>
		<p>{{ section.settings.content }}</p>
	</section>
</main>

{% schema %}
	{
		"name": "Page settings",
		"settings": [
			{
				"type": "select",
				"id": "container",
				"label": "Layout",
				"options": [
					{
						"value": "container",
						"label": "Container"
					},
					{
						"value": "container-fluid",
						"label": "Container Fluid"
					}
				],
				"default": "container"
			},
			{
				"type": "checkbox",
				"id": "show_published_date",
				"label": "Show Published Date",
				"default": true
			},
			{
				"type": "text",
				"id": "title",
				"label": "Title Label",
				"default": "Page Title"
			},
			{
				"type": "text",
				"id": "content",
				"label": "Content Label",
				"default": "Page content here."
			}
		]
	}
{% endschema %}
