.inner-hero-section {
	position: relative;
	overflow: hidden;
	width: 100%;
	height: 40rem;
	min-height: fit-content;
	max-height: 100vh;
	display: flex;
	align-items: center;
	justify-content: center;
}

.inner-hero-section img,
.inner-hero-section svg {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	z-index: -1;
}

.inner-hero-section .row .mx-auto {
	width: fit-content;
}
