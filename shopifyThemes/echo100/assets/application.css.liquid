.custom-scrollbar {
	height: 7rem;
	overflow-y: scroll;
}

.custom-scrollbar::-webkit-scrollbar {
	width: 0.8rem;
}

.custom-scrollbar::-webkit-scrollbar-track {
	background: #1e3f20;
	border-radius: 1.2rem;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
	background: #4a7856;
	border-radius: 1.2rem;
}

.inner-hero-section {
	position: relative;
	overflow: hidden;
	width: 100%;
	height: 40rem;
	min-height: fit-content;
	max-height: 100vh;
	display: flex;
	align-items: center;
	justify-content: center;
}

.inner-hero-section img,
.inner-hero-section svg {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: -1;
}

.inner-hero-section .row .mx-auto {
	width: fit-content;
}

.card-img-top {
	height: 35rem;
	object-fit: cover;
}

.items-hover-effect .item {
	transition: all 0.4s ease-in;
}

.items-hover-effect:hover .item:not(:hover) {
	filter: brightness(0.4);
}
